<%= form_for(member) do |f| %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="row">
    <%= f.label :firstname %>
    <div class="col-xs-4 input-group"><%= f.text_field :firstname, class: "form-control" %></div>
  </div>

  <div class="row">
    <%= f.label :lastname %>
    <div class="col-xs-4 input-group"><%= f.text_field :lastname, class: "form-control" %></div>
  </div>

  <div class="row">
    <%= f.label :email %>
    <div class="col-xs-4 input-group"><%= f.text_field :email, class: "form-control" %></div>
  </div>

  <div class="row">
    <%= f.label :address %>
    <div class="col-xs-4 input-group"><%= f.text_field :address, class: "form-control" %></div>
  </div>

  <div class="row actions">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>


<% if member.errors.any? %>
  <div class="notice-holder row">
    <% member.errors.full_messages.each do |message| %>
      <p class="notice alert alert-danger"><%= message %></p>
    <% end %>
  </div>
<% end %>
