<h1>People</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%=sortable "firstname" %></th>
      <th><%=sortable "lastname" %></th>
      <th><%=sortable "email" %></th>
      <th><%=sortable "address" %></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr data-link="<%= url_for(person) %>">
        <td><%= person.firstname %></td>
        <td><%= person.lastname %></td>
        <td><%= person.email %></td>
        <td><%= truncate(person.address, length: 40)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @people %>

<br>

<%= link_to 'New Person', new_person_path, class: "btn btn-success" %>
