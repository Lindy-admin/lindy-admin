<%= form_for(course) do |f| %>
  <div class="row">
    <%= f.label :title %>
    <div class="col-xs-4 input-group"><%= f.text_field :title, class: "form-control" %></div>
  </div>

  <div class="row">
    <%= f.label :description %>
    <div class="col-xs-4 input-group"><%= f.text_area :description, class: "form-control" %></div>
  </div>

  <div class="row">
    <%= f.label :start %>
    <div class="col-xs-4 input-group"><%= f.date_select :start, class: "form-control" %></div>
  </div>

  <div class="row">
    <%= f.label :end %>
    <div class="col-xs-4 input-group"><%= f.date_select :end, class: "form-control" %></div>
  </div>

  <div class="row actions">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>

<% if course.errors.any? %>
  <div class="notice-holder row">
    <% course.errors.full_messages.each do |message| %>
      <p class="notice alert alert-danger"><%= message %></p>
    <% end %>
  </div>
<% end %>
