<h1>Courses</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Start</th>
      <th>End</th>
      <th>Leads / Follows</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr data-link="<%= url_for(course) %>">
        <td><%= course.title %></td>
        <td><%= truncate(course.description, length: 40) %></td>
        <td><%= course.start %></td>
        <td><%= course.end %></td>
        <td><%= "#{course.leads} / #{course.follows}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, class: "btn btn-success" %>
